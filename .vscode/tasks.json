{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Configure with MinGW",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-G", "MinGW Makefiles",
                "-DCMAKE_C_COMPILER=gcc",
                "-DCMAKE_CXX_COMPILER=g++"
            ]
        },
        {
            "type": "shell",
            "label": "Build",
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cmake",
            "args": [
                "--build", "build"
            ]
        }
    ]
}
